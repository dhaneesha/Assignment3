<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/txtViewWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/vege_prompt"
        android:textSize="25sp" />

    <ImageButton
        android:id="@+id/btn_carrot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/txtViewWelcome"
        android:layout_alignLeft="@+id/txtViewWelcome"
        android:layout_below="@+id/txtViewWelcome"
        android:layout_marginTop="22dp"
        android:contentDescription="@string/avatar_button"
        android:src="@drawable/carrot" />

    <ImageButton
        android:id="@+id/btn_potato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/txtViewWelcome"
        android:layout_alignRight="@+id/txtViewWelcome"
        android:layout_alignTop="@+id/btn_carrot"
        android:contentDescription="@string/avatar_button"
        android:src="@drawable/carrot" />

    <ImageButton
        android:id="@+id/btn_pumpkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_carrot"
        android:layout_alignLeft="@+id/btn_carrot"
        android:layout_below="@+id/btn_carrot"
        android:contentDescription="@string/avatar_button"
        android:src="@drawable/carrot" />

    <ImageButton
        android:id="@+id/btn_squash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/btn_potato"
        android:layout_alignLeft="@+id/btn_potato"
        android:layout_alignTop="@+id/btn_pumpkin"
        android:contentDescription="@string/avatar_button"
        android:src="@drawable/carrot" />

</RelativeLayout>