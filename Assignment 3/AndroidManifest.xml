<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.unitec.assignment3"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="22" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/cabbage"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="edu.unitec.views.Main"
            android:label="@string/app_name"
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="edu.unitec.views.StatsActivity"
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden"
            android:label="@string/title_activity_stats_view"
            android:theme="@style/Theme.Transparent"
            >
        </activity>
        <activity
            android:name="edu.unitec.views.AvatarActivity"
            android:label="@string/title_activity_avatar_view"
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden" >
        </activity>
        <activity
            android:name="edu.unitec.views.GameActivity"
            android:label="@string/title_activity_game"
            android:parentActivityName="edu.unitec.views.Main"
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden" >
        </activity>

        <activity
            android:name="edu.unitec.views.GraveyardActivity"
            android:label="@string/title_activity_graveyard_view"
            android:screenOrientation="landscape" 
            android:configChanges="orientation|keyboardHidden" >
        </activity>
    </application>

</manifest>
